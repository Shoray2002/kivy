
WidgetExample:
<WidgetExample>:
    cols:4
    
    ToggleButton:
        text:'text'
        on_state: root.on_toggle_btn(self)
        size_hint: None, 1
        width:"100dp"
    Button:
        text:'SUB'
        on_press:root.on_btn_click_sub()
        font_name: 'Fonts\Orbitron-ExtraBold.ttf'
        disabled: not root.count_enabled
    Label:
        text:root.my_text
        font_name: 'Fonts\Orbitron-ExtraBold.ttf'
        font_size:"60dp"
        color:0.24,0.65,1,1
        
    Button:
        text: 'ADD' 
        # on_state: root.on_toggle_btn()
        on_press:root.on_btn_click_add(self)
        font_name: 'Fonts\Orbitron-ExtraBold.ttf'
        disabled:not root.count_enabled
    


















